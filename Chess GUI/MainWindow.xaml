<Window x:Class="Chess_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess_GUI"
        mc:Ignorable="d"
        Title="Chess" Width="600" SizeToContent="Height"
        Icon="Assets/icon.ico"
        WindowStartupLocation="CenterScreen"
        Background="#11101F">
    <Viewbox>
        <Grid x:Name="BoardGrid"
              Width="600"
              Height="600">
            <Grid.Background>
                <ImageBrush ImageSource="Assets/Board.png" Stretch="None"></ImageBrush>
            </Grid.Background>
            
            <UniformGrid x:Name="PieceGrid"
                         Rows="8"
                         Columns="8"
                         RenderOptions.BitmapScalingMode="HighQuality">
            </UniformGrid>
        </Grid>
    </Viewbox>
</Window>
